<div class="grid" id="cardContainer">

<!-- Asia -->
<script>
const offices = [
{id:"cnipa",name:"China – CNIPA",url:"https://sbj.cnipa.gov.cn/",region:"asia"},
{id:"hk",name:"Hong Kong – IPD",url:"https://esearch.ipd.gov.hk/",region:"asia"},
{id:"tipo",name:"Taiwan – TIPO",url:"https://tiponet.tipo.gov.tw/",region:"asia"},
{id:"macao",name:"Macao – DSEDT",url:"https://www.dsedt.gov.mo/",region:"asia"},
{id:"jpo",name:"Japan – JPO",url:"https://www.j-platpat.inpit.go.jp/",region:"asia"},
{id:"korea",name:"Korea – KIPRIS",url:"https://www.kipris.or.kr/",region:"asia"},
{id:"india",name:"India – IP Office",url:"https://ipindia.gov.in/",region:"asia"},
{id:"singapore",name:"Singapore – IPOS",url:"https://tmsearch.ipos.gov.sg/",region:"asia"},

{id:"euipo",name:"European Union – EUIPO",url:"https://euipo.europa.eu/",region:"europe"},
{id:"ukipo",name:"United Kingdom – UK IPO",url:"https://www.gov.uk/search-for-trademark",region:"europe"},
{id:"russia",name:"Russia – Rospatent",url:"https://www.fips.ru/",region:"europe"},

{id:"uspto",name:"United States – USPTO",url:"https://tmsearch.uspto.gov/",region:"northamerica"},
{id:"canada",name:"Canada – CIPO",url:"https://ised-isde.canada.ca/site/canadian-intellectual-property-office/en",region:"northamerica"},

{id:"brazil",name:"Brazil – INPI",url:"https://www.gov.br/inpi/",region:"southamerica"},
{id:"argentina",name:"Argentina – INPI",url:"https://www.argentina.gob.ar/inpi",region:"southamerica"},

{id:"southafrica",name:"South Africa – CIPC",url:"https://www.cipc.co.za/",region:"africa"},

{id:"australia",name:"Australia – IP Australia",url:"https://search.ipaustralia.gov.au/",region:"oceania"}
];
</script>

</div>
</div>

<script>
const container=document.getElementById("cardContainer");

offices.forEach(o=>{
container.innerHTML+=`
<div class="card" data-id="${o.id}" data-region="${o.region}" data-name="${o.name}">
<div class="favorite" onclick="toggleFavorite('${o.id}')">☆</div>
<a href="${o.url}" target="_blank" onclick="recordClick('${o.id}')">${o.name}</a>
<div class="stats" id="stats-${o.id}"></div>
<textarea placeholder="Add notes..." onkeyup="saveNote('${o.id}', this.value)"></textarea>
</div>`;
});

const input=document.getElementById("searchInput");
const cards=document.querySelectorAll(".card");

input.addEventListener("keyup",function(){
const filter=input.value.toLowerCase();
cards.forEach(card=>{
const name=card.getAttribute("data-name").toLowerCase();
card.style.display=name.includes(filter)?"block":"none";
});
});

function filterRegion(region){
cards.forEach(card=>{
card.style.display=(region==="all"||card.dataset.region===region)?"block":"none";
});
}

function toggleFavorite(id){
let favs=JSON.parse(localStorage.getItem("favorites")||"[]");
if(favs.includes(id)){favs=favs.filter(f=>f!==id);}
else{favs.push(id);}
localStorage.setItem("favorites",JSON.stringify(favs));
location.reload();
}

function recordClick(id){
let clicks=JSON.parse(localStorage.getItem("clicks")||"{}");
clicks[id]=(clicks[id]||0)+1;
localStorage.setItem("clicks",JSON.stringify(clicks));
}

function saveNote(id,value){
let notes=JSON.parse(localStorage.getItem("notes")||"{}");
notes[id]=value;
localStorage.setItem("notes",JSON.stringify(notes));
}

function loadData(){
let favs=JSON.parse(localStorage.getItem("favorites")||"[]");
let clicks=JSON.parse(localStorage.getItem("clicks")||"{}");
let notes=JSON.parse(localStorage.getItem("notes")||"{}");

cards.forEach(card=>{
let id=card.dataset.id;

if(favs.includes(id)){
card.querySelector(".favorite").innerText="★";
card.style.order="-1";
}

if(clicks[id]){
document.getElementById("stats-"+id).innerText="Used "+clicks[id]+" times";
}

if(notes[id]){
card.querySelector("textarea").value=notes[id];
}
});
}

loadData();
</script>

